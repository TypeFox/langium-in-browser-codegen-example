{
   "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "Node16",
      "lib": [
         "ES2020",
         "WebWorker",
         "DOM"
      ],
      "outDir": "out",
      // "sourceMap": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": [
      "src/**/*.ts",
      "src/**/*.mts"
   ],
   "exclude": [
      "out",
      "public",
      "node_modules"
   ]
}